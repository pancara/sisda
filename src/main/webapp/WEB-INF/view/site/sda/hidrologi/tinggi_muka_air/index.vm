<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>
        <a href="#springUrl("/sda.html")">Data SDA</a>
        &#187;
        <a href="#springUrl("/sda/hidrologi.html")">Hidrologi</a>
        &#187;
        <span>Tinggi Muka Air</span>
    </title>
</head>
<body>

<div id="sda_content">
    <h3 style="display: block;  border-bottom: 1px dotted #EEE; ">
        TINGGI MUKA AIR
    </h3>
    <br/>

    <div class="jquery_foldertree"
         style="border: 1px solid #EEE;  padding: 8px; width: 540px; margin: 0px auto 0px auto; border-radius: 4px;">
        <div class="title">
            Data Debit :
        </div>
        #foreach($ws in $mapWs.keySet())
            <div class="folder">
                <span class="label">
                    WS $ws.name
                </span>

                <div class="children">
                    #set($mapDas = $mapWs.get($ws))
                    #foreach($das in $mapDas.keySet())
                        <div class="folder">
                            <span class="label">
                                $das.name
                            </span>

                            <div class="children">
                                #set($mapPos = $mapDas.get($das))
                                #foreach($pos in $mapPos.keySet())
                                    <div class="folder">
                                    <span class="label">
                                        $!{pos.name}
                                    </span>

                                        <div class="children">
                                            #set($listTMA = $mapPos.get($pos))
                                            #if ($listTMA.size() > 0)
                                                #foreach($tma in $listTMA)
                                                    <div class="item">
                                                    <span class="label">${tma.description}
                                                        <a href="#springUrl("/download/sda/hidrologi/tinggi_muka_air/TMA/${tma.id}/${tma.filename}")"
                                                           style="float: right;" target="_blank">
                                                            <img src="#springUrl("/images/16x16/download.png")"/>
                                                        </a>
                                                    </span>
                                                    </div>
                                                #end
                                            #else
                                                <div class="item">
                                                <span class="empty">
                                                    - data tidak tersedia -
                                                </span>
                                                </div>
                                            #end
                                        </div>
                                    </div>
                                #end
                            </div>
                        </div>
                    #end
                </div>
            </div>
        #end
    </div>
</div>

<script type="text/javascript">
    //<![CDATA[
    $("div.jquery_foldertree div.folder > span.label").each(function () {
        $(this).click(function () {
            var children = $(this).siblings(".children");
            children.slideToggle();
        });
    });

    $("div.jquery_foldertree .children").each(function () {
        $(this).slideUp();
    });
    // ]]>
</script>

</body>
</html>
