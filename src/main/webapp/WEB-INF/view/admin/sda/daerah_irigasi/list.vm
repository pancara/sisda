#macro(paging $pages $keyword)
<div class="page_index">
    #if ($pages.size() > 0)
        <a href='#springUrl("/admin/sda/daerah_irigasi/page/1.html?keyword=$!{keyword}")'>
            <img src="#springUrl("/images/16x16/go-first.png")" alt="1"/>
        </a>

        #set($prev = $current - 1)
        #if ($prev < 1)
            #set($prev = 1)
        #end
        <a href='#springUrl("/admin/sda/daerah_irigasi/page/${prev}.html?keyword=$!{keyword}")'>
            <img src="#springUrl("/images/16x16/go-previous.png")" alt="${prev}"/>
        </a>

        #foreach($page in $pages)

            #if ($page == $current)
                <a href='#springUrl("/admin/sda/daerah_irigasi/page/${page}.html?keyword=$!{keyword}")'
                   class="current">$page</a>
            #else
                <a href='#springUrl("/admin/sda/daerah_irigasi/page/${page}.html?keyword=$!{keyword}")'
                   class="page">$page</a>
            #end
        #end

        #set($next = $current + 1)
        #if ($next > $last)
            #set($next = $last)
        #end
        <a href='#springUrl("/admin/sda/daerah_irigasi/page/${next}.html?keyword=$!{keyword}")'>
            <img src="#springUrl("/images/16x16/go-next.png")" alt="${next}"/>
        </a>

        <a href='#springUrl("/admin/sda/daerah_irigasi/page/${last}.html?keyword=$!{keyword}")'>
            <img src="#springUrl("/images/16x16/go-last.png")" alt="${last}"/>
        </a>

    #end
</div>
#end<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>
        <a href="#springUrl("/admin/sda/daerah_irigasi/type/list.html")">Daerah Irigasi</a>
        &#187;
        <span>Tipe Daerah Irigasi ${type.name}</span>    
    </title>
</head>
<body>
<div id="daerah_irigasi">
    <div style="display: block;">
        <form action='#springUrl("/admin/sda/daerah_irigasi/list.html")'
              style="display: block; padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px;">

            &nbsp;&nbsp;
            Kata kunci:&nbsp;
            <input type='text' name='keyword' value='$!{form.keyword}' class='text'/>
            <input type='submit' value='cari'/>
        </form>
    </div>
    <div>
        <span class="info">
                <img src="#springUrl("/images/16x16/table_row_select.png")"/>
                Ditemukan ${count} data.
        </span>
        #paging($pages, ${form.keyword})
    </div>
    <div>
        <form action="#springUrl("/admin/sda/daerah_irigasi/type/${type.id}/manage.html")" method="post">
            <table class="no_border">
                <col style="width: 20px"/>
                <col style="width: 20px"/>
                <col style="width: 20px"/>
                <col style="width: 300px;"/>
                <col style="width: 400px;"/>
                <col style="width: 100px;"/>
                <col style="width: 50px;"/>
                <thead>
                <tr>
                    <th>No.</th>
                    <th>
                        <input type='checkbox' name="ids_all" class="select_all"/>
                    </th>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Keterangan</th>
                    <th>File</th>
                    <th>
                        <a href='#springUrl("/admin/sda/daerah_irigasi/type/${type.id}/add.html")' class='button'>
                            baru
                        </a>
                    </th>
                </tr>
                </thead>
                #foreach ($di in $daerahIrigasiList)
                    <tr>
                        <td>${velocityCount}.</td>
                        <td>
                            <input type='checkbox' name='ids' value='${di.id}'/>
                        </td>
                        <td>
                         <span class="text_id">
                             ${di.id}
                         </span>
                        </td>
                        <td class="short_content">
                            ${di.name}
                        </td>
                        <td class="short_content">
                            ${di.description}
                        </td>
                        <td class="short_content">
                            #if ($di.filename)
                            <a href="#springUrl("/download/sda/daerah_irigasi/${di.id}/${di.filename}")"
                               class="button" target="_blank">
                                ${di.filename}
                            </a>
                            #end
                        </td>
                        <td>
                            <a href='#springUrl("/admin/sda/daerah_irigasi/type/${type.id}/edit/${di.id}.html")' class='button'>
                                edit
                            </a>
                        </td>
                    </tr>
                    #set($row = $row + 1)
                #end
                <tfoot>
                <tr>
                    <td></td>
                    <td>
                        <input type='checkbox' name="ids_all" class="select_all"/>
                    </td>
                    <td colspan="5">
                        <input type="hidden" name="keyword" value="$!{form.keyword}"/>
                        <input type="hidden" name="page" value="${current}"/>

                        <input type="submit" name="remove" value="Hapus"/>
                    </td>
                </tr>
                </tfoot>
            </table>
        </form>
    </div>
    <div>
        <span class="info">
                <img src="#springUrl("/images/16x16/table_row_select.png")"/>
                Ditemukan ${count} data.
        </span>
        #paging($pages,  ${form.keyword})
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".popup").colorbox({width:"800px", height:"95%", iframe:true});

        $("input[type=checkbox].select_all").click(function () {
            var checked = $(this).prop("checked");
            $("#daerah_irigasi table input[type=checkbox]").attr("checked", checked);
        });
    });
</script>
</body>
</html>
