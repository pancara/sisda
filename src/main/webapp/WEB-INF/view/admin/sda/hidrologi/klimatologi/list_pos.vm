<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>
        <a href="#springUrl("/admin/sda/hidrologi/klimatologi/list.html")">Klimatologi</a>
        &#187;
        <a href="#springUrl("/admin/sda/hidrologi/klimatologi/list/${ws.id}.html")">${ws.name}</a>
        &#187;
        <span>Data Klimatologi</span>
    </title>
</head>
<body>
<div id="klimatologi">
    <div>
        <form action="#springUrl("/admin/sda/hidrologi/klimatologi/${ws.id}/remove.html")" method="post">
            <table class="no_border">
                <col style="width: 20px"/>
                <col style="width: 20px"/>
                <col style="width: 20px"/>
                <col style="width: 780px;"/>
                <col style="width: 10px;"/>
                <col style="width: 180px"/>
                <thead>
                <tr>
                    <th>No.</th>
                    <th>
                        <input type='checkbox' name="ids_all" class="select_all"/>
                    </th>
                    <th>ID</th>
                    <th>Nama</th>
                    <th></th>
                    <th>
                        <a href='#springUrl("/admin/sda/hidrologi/klimatologi/${ws.id}/add.html")' class='button'>
                            baru
                        </a>
                    </th>
                </tr>
                </thead>
                #foreach ($pos in $listPosKlimatologi)
                    #set($row = $velocityCount)
                    <tr>
                        <td>${row}.</td>
                        <td>
                            <input type='checkbox' name='ids' value='${pos.id}'/>
                        </td>
                        <td>
                         <span class="text_id">
                             ${pos.id}
                         </span>
                        </td>
                        <td class="short_content">
                            ${pos.name}
                        </td>
                        <td>
                            #if (${pos.filename})
                                <a href="#springUrl("/download/admin/sda/hidrologi/klimatologi/${pos.id}/$!{pos.filename}")"
                                   target="_blank">
                                    <img src="#springUrl("/images/filetype/$fileTool.getFileTypeIcon($!{pos.filename})")"/>
                                </a>
                            #end
                        </td>
                        <td>
                            <a href='#springUrl("/admin/sda/hidrologi/klimatologi/${ws.id}/edit/${pos.id}.html")' class='button'>
                                edit
                            </a>
                        </td>
                    </tr>
                    #set($row = $row + 1)
                #end
                <tfoot>
                <tr>
                    <td></td>
                    <td>
                        <input type='checkbox' name="ids_all" class="select_all"/>
                    </td>
                    <td colspan="5">
                        <input type="hidden" name="keyword" value="$!{form.keyword}"/>
                        <input type="hidden" name="page" value="${current}"/>

                        <input type="submit" name="remove" value="Hapus"/>
                    </td>
                </tr>
                </tfoot>
            </table>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".popup").colorbox({width: "800px", height: "95%", iframe: true});

        $("input[type=checkbox].select_all").click(function () {
            var checked = $(this).prop("checked");
            $("#klimatologi table input[type=checkbox]").attr("checked", checked);
        });
    });
</script>
</body>
</html>
